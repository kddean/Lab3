<script type="text/javascript">
function loadDoc(reqURL)
	var xhttp = new XMLHttpRequest();
	xhttp.open("POST", reqURL, true)
	xhttp.onreadystatechange = function(){
		if (xhttp.readyState == 4 && xhttp.status == 200) {
		      document.getElementById("m").innerHTML = xhttp.responseText;
		    }
	};
	  //xhttp.open("POST", "ToDo.html", true);
	  xhttp.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
	  xhttp.send();
</script>
<script type="text/javascript">
function action(){
	var eventS = new EventSource("ToDoServlet");
	eventS.onmessage = function(event){
		document.getElementById('ajaxResponse').innerHTML = event.data
	}
}</script>
